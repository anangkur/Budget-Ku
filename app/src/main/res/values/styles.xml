<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- end of Base application theme. -->

    <!--style for linear-->
    <style name="LinearDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LinearVerticalDefault" parent="LinearDefault">
        <item name="android:orientation">vertical</item>>
    </style>

    <style name="LinearVerticalWrapAll" parent="LinearVerticalDefault">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="LinearVerticalWrap" parent="LinearVerticalDefault">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="LinearHorizontalDefault" parent="LinearDefault">
        <item name="android:orientation">horizontal</item>>
    </style>

    <style name="LinearHorizontalWrapAll" parent="LinearHorizontalDefault">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="LinearHorizontalWrap" parent="LinearHorizontalDefault">
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--end of style for linear-->

    <!--style for relative-->
    <style name="RelativeDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="RelativeWrapAll" parent="RelativeDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="RelativeWrapH" parent="RelativeDefault">
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="RelativeButtonTransparent" parent="RelativeDefault">
        <item name="android:layout_height">48dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>
    <!--end of style for relative-->

    <!--style for constraint-->
    <style name="ConstraintDefault">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="ConstraintWrapHeight" parent="ConstraintDefault">
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ConstraintWrapAll" parent="ConstraintDefault">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!--end of style for constraint-->

    <!--style for coordinator-->
    <style name="CoordinatorDefault">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!--end of style for coordinator-->

    <!--style for appbar-->
    <style name="AppBarCollapsing">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--end of style for appbar-->

    <!--style for collapsing toolbar-->
    <style name="CollapsingDefault">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!--end of style for collapsing toolbar-->

    <!--style for recycler view-->
    <style name="RecyclerDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="RecyclerWrapHeight" parent="RecyclerDefault">
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--end of style for recycler view-->

    <!--style for base text-->
    <style name="TextNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextBig">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextExtraBig">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextSuperExtraBig">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextSuperSuperExtraBig">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--end of style for base text-->

    <!--style for regular text-->
    <style name="TextRegularSmall" parent="TextSmall">
        <item name="android:fontFamily">@font/comfortaa_regular</item>
    </style>
    <style name="TextRegularNormal" parent="TextNormal">
        <item name="android:fontFamily">@font/comfortaa_regular</item>
    </style>
    <style name="TextRegularBig" parent="TextBig">
        <item name="android:fontFamily">@font/comfortaa_regular</item>
    </style>
    <!--end of style for regular text-->

    <!--style for bold text-->
    <style name="TextBoldNormal" parent="TextNormal">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
    </style>
    <style name="TextBoldSmall" parent="TextSmall">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
    </style>
    <style name="TextBoldBig" parent="TextBig">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
    </style>
    <style name="TextBoldBigWhite" parent="TextBoldBig">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextBoldExtraBig" parent="TextExtraBig">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
    </style>
    <style name="TextBoldSuperExtraBig" parent="TextSuperExtraBig">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
    </style>
    <style name="TextBoldSuperSuperExtraBig" parent="TextSuperSuperExtraBig">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
    </style>
    <style name="TextBoldSuperExtraBigWhite" parent="TextBoldSuperExtraBig">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
    </style>
    <!--end of style for regular text-->

    <!--style for image view-->
    <style name="ImageViewDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="ImageView10" parent="ImageViewDefault">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
    </style>

    <style name="ImageView24" parent="ImageViewDefault">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="ImageView28" parent="ImageViewDefault">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
    </style>

    <style name="ImageView80" parent="ImageViewDefault">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="ImageView48" parent="ImageViewDefault">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="ImageView100" parent="ImageViewDefault">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="ImageView120" parent="ImageViewDefault">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
    </style>

    <style name="ImageView180" parent="ImageViewDefault">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">180dp</item>
    </style>

    <style name="ImageView40" parent="ImageViewDefault">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="ImageViewHeightRatio" parent="ImageViewDefault">
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ImageViewAllRatio" parent="ImageViewDefault">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ImageViewWrapAll" parent="ImageViewDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--end of style for image view-->

    <!--style for text input layout-->
    <style name="TextInputLayoutDefault">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!--end of style for text input layout-->

    <!--style for edit text-->
    <style name="EditTextDefault">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
    </style>
    <!--end of style for edit text-->

    <!--style for view-->
    <style name="ViewLine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
    </style>
    <!--end of style for view-->

    <!--style for nested scroll-->
    <style name="NestedScrollDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--end of style for nested scroll-->

    <!--style for card-->
    <style name="CardDefault">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="CardWrapHeight" parent="CardDefault">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardWrapAll" parent="CardDefault">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!--end of style for nested scroll-->

    <!--style for toolbar-->
    <style name="ToolbarDefault">
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>
    <!--end of style for toolbar-->

    <!--style for fab-->
    <style name="FABDefault">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!--end of style for fab-->

    <!--style for view pager-->
    <style name="ViewPagerDefault">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="ViewPagerRatio" parent="ViewPagerDefault">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
    </style>
    <!--end of style for view pager-->

    <!--style for tab layout-->
    <style name="TabLayoutDefault">
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!--end of style for tab layout-->

    <!--style for swipe refresh-->
    <style name="SwipeRefreshDefault">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!--end of style for swipe refresh-->

    <!--style for frame-->
    <style name="FrameDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--end of style for frame-->

    <!--style for bottom navigation-->
    <style name="BottomNavigationDefault">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <!--end of style for bottom navigation-->

    <!--button-->
    <style name="ButtonDefault">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="ButtonWidth280">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">280dp</item>
    </style>
    <style name="ButtonSmall">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">120dp</item>
    </style>
    <!--end of button-->

    <public name="CalcDialogStyle" type="style"/>
    <style name="CalcDialogStyle">
        <item name="calcDialogMaxWidth">400dp</item>
        <item name="calcDialogMaxHeight">500dp</item>
        <item name="calcButtonTextClear">@string/calc_dialog_clear</item>
        <item name="calcButtonTextCancel">@string/calc_dialog_cancel</item>
        <item name="calcButtonTextOk">@string/calc_dialog_ok</item>
        <item name="calcButtonTexts">@array/calc_dialog_btn_texts</item>
        <item name="calcBackgroundColor">?colorBackgroundFloating</item>
        <item name="calcHeaderColor">?calcBackgroundColor</item>
        <item name="calcHeaderElevation">2dp</item>
        <item name="calcHeaderElevationColor">#33000000</item>
        <item name="calcValueStyle">@style/CalcValueStyle</item>
        <item name="calcExpressionScrollViewStyle">@style/CalcExpressionScrollViewStyle</item>
        <item name="calcExpressionStyle">@style/CalcExpressionStyle</item>
        <item name="calcDigitBtnStyle">@style/CalcNumberBtnStyle</item>
        <item name="calcDigitBtnColor">@android:color/transparent</item>
        <item name="calcOperationBtnStyle">@style/CalcOperationBtnStyle</item>
        <item name="calcOperationBtnColor">@color/calc_operation_btn_color</item>
        <item name="calcAnswerBtnStyle">@style/CalcAnswerBtnStyle</item>
        <item name="calcEraseBtnStyle">@style/CalcEraseBtnStyle</item>
        <item name="calcDividerColor">@color/calc_divider_color</item>
        <item name="calcDialogButtonStyle">@style/CalcDialogButtonStyle</item>
        <item name="calcErrors">@array/calc_dialog_errors</item>
    </style>

    <public name="CalcValueStyle" type="style"/>
    <style name="CalcValueStyle">
        <item name="android:layout_height">64dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="autoSizeMaxTextSize">24sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">1sp</item>
    </style>

    <public name="CalcExpressionStyle" type="style"/>
    <style name="CalcExpressionStyle">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <public name="CalcExpressionScrollViewStyle" type="style"/>
    <style name="CalcExpressionScrollViewStyle">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">none</item>
    </style>

    <public name="CalcNumberBtnStyle" type="style"/>
    <style name="CalcNumberBtnStyle">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5</item>
        <item name="android:textSize">28sp</item>
    </style>

    <public name="CalcOperationBtnStyle" type="style"/>
    <style name="CalcOperationBtnStyle">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5</item>
    </style>

    <public name="CalcAnswerBtnStyle" type="style"/>
    <style name="CalcAnswerBtnStyle">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <public name="CalcEraseBtnStyle" type="style"/>
    <style name="CalcEraseBtnStyle">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:src">@drawable/calc_ic_backspace</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:contentDescription">@string/calc_dialog_erase</item>
    </style>

    <public name="CalcDialogButtonStyle" type="style"/>
    <style name="CalcDialogButtonStyle"
        parent="Widget.MaterialComponents.Button.TextButton.Dialog"/>
</resources>
