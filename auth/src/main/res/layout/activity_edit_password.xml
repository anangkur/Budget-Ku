<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LinearVerticalDefault">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarDefault"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
        app:titleTextColor="@color/black"
        android:elevation="4dp"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nv_edit_password"
        style="@style/NestedScrollDefault"
        android:layout_marginTop="?actionBarSize"
        android:layout_above="@id/btn_save">
        <LinearLayout
            style="@style/LinearVerticalWrap"
            android:padding="20dp">
            <ImageView
                style="@style/ImageViewWrapAll"
                android:src="@drawable/ic_shield"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_password_old"
                style="@style/TextInputLayoutDefault"
                android:layout_marginTop="20dp"
                app:passwordToggleEnabled="true">
                <EditText
                    android:id="@+id/et_password_old"
                    style="@style/EditTextDefault"
                    android:hint="@string/hint_old_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:imeOptions="actionNext"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_password_new"
                style="@style/TextInputLayoutDefault"
                android:layout_marginTop="20dp"
                app:passwordToggleEnabled="true">
                <EditText
                    android:id="@+id/et_password_new"
                    style="@style/EditTextDefault"
                    android:hint="@string/hint_new_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:imeOptions="actionNext"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_password_confirm"
                style="@style/TextInputLayoutDefault"
                android:layout_marginTop="20dp"
                app:passwordToggleEnabled="true">
                <EditText
                    android:id="@+id/et_password_confirm"
                    style="@style/EditTextDefault"
                    android:hint="@string/hint_confirm_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:imeOptions="actionDone"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.anangkur.materialloadingbutton.MaterialLoadingButton
        android:id="@+id/btn_save"
        style="@style/ButtonDefault"
        app:mlb_cornerRadius="100dp"
        app:mlb_defaultColor="@color/colorPrimary"
        app:mlb_textColor="@color/white"
        app:mlb_textButton="@string/btn_save"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>